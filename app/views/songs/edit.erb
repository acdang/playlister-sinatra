<h2>Edit a song:</h2>
<form method="POST" action="/songs/<%= @song.slug %>">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <label>Name:
        <input id="Name" type="text" name="song[name]" value="<%= @song.name %>">
    </label>
    <br>
    <label>Artist Name:
        <input type="text" name="artist_name" value="<%= @song.artist.name %>">
    </label>
    <br>
    <label>Genres:
        <br>
        <% Genre.all.each do |genre| %>
            <% if @song.genres.include?(genre) %>
                <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>" checked>
            <% else %>
                <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>">
            <% end %>
            <%= genre.name %>
        <% end %> 
    </label>
    <br>
    <input type="submit" value="Save">
</form>
